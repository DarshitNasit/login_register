extends layout2

block content
    .row.mt-5
        .col-md-6.m-auto
            .card.card-body
                h1.text-center.mb-3
                    i.fas.fa-user-plus
                    |   Register
                != messages('message', locals)
                form(action='/users/register' method='POST')
                    .form-group
                        label(for='name') Name
                        input.form-control(type='name' id='name' name='name' placeholder='Enter Name' value=`${typeof name != 'undefined' ? name : ''}`)
                    .form-group
                        label(for='email') Email
                        input.form-control(type='email' id='email' name='email' placeholder='Enter Email' value=`${typeof email != 'undefined' ? email : ''}`)
                    .form-group
                        label(for='password') Password
                        input.form-control(type='password' id='password' name='password' placeholder='Enter Password')
                    .form-group
                        label(for='password2') Confirm Password
                        input.form-control(type='password' id='password2' name='password2' placeholder='Enter Password')
                    button.btn.btn-primary.btn-block(type='submit') Register
                p.lead.mt-4 Have An Account ? 
                    a(href='/users/login') Login